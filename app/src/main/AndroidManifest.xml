<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Audio permission -->
    <uses-permission android:name="android.permission.READ_MEDIA_AUDIO" />

    <!-- Storage permissions for custom EQ import (legacy - for Android 9 and below) -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />

    <!-- foreground service permissions for music playback, TODO:(handle android 14+ proper permissions for foreground service -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"
        tools:ignore="ForegroundServicesPolicy" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MEDIA_PLAYBACK" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:name="NanoSonicApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.NanoSonicProject">

        <!-- Android Auto metadata -->
        <meta-data

            android:name="com.google.android.gms.car.application"
            android:resource="@xml/automotive_app_desc" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.NanoSonicProject">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />

            </intent-filter>
        </activity>
        <!-- Music Player Service with Android Auto support
             Exported to allow Android Auto and other media controllers to connect.
             Security is handled by Media3's session-based authentication rather than
             manifest permissions, which provides better control over client access. -->
        <service
            android:name=".service.MusicPlayerService"
            android:exported="true"
            android:foregroundServiceType="mediaPlayback">
            <intent-filter>
                <action android:name="androidx.media3.session.MediaLibraryService" />
                <action android:name="android.media.browse.MediaBrowserService" />
           </intent-filter>
       </service>
   </application>
</manifest>